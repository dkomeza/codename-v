generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id              String   @id @default(cuid())
  type            Int
  email           String
  password        String

  name            String
  surname         String
  orgIdRel Organization @relation(fields: [organizationId], references: [id])
  organizationId String
  birthDate      DateTime

  Application Application[]
  Message Message[]

  @@map("users")
}

model Event {
  id             String @id @default(cuid())
  topic          String
  startDate      DateTime
  endTime        DateTime
  requirements   String
  orgIdRel Organization @relation(fields: [organizationId], references: [id])
  organizationId String

  Application Application[]
  @@map("events")
}

model Organization {
  id String @id @default(cuid())
  organizationName String
  User User[]
  Event Event[]
  Application Application[]
  Message Message[]

  @@map("organizations")
}

model Application {
  id String @id @default(cuid())
  orgIdRel Organization  @relation(fields: [organizationId], references: [id])
  organizationId String
  userIdRel User @relation(fields: [userId], references: [id])
  userId String
  eventIdRel Event @relation(fields: [eventId], references: [id])
  eventId String

  @@map("applications")
}

model Message {
  id String @id @default(cuid())
  userIdRel User @relation(fields: [userId], references: [id])
  userId String
  orgIdRel Organization  @relation(fields: [organizationId], references: [id])
  organizationId String
  message String
  messageTime DateTime
  sentFromOrganization Boolean
  
  @@map("messages")
}