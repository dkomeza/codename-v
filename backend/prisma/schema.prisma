generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id              String   @id @default(cuid())
  type            UserType @default(VOLUNTEER)
  email           String
  password        String

  name            String
  surname         String
  orgIdRel Organization @relation(fields: [organizationId], references: [id])
  organizationId String
  birthDate      DateTime
  chats Chat[]

  Application Application[]
  Message Message[]

  @@map("users")
}

enum UserType {
  ADMIN
  ORG
  COORDINATOR
  VOLUNTEER
}

model Event {
  id             String @id @default(cuid())
  title          String
  images         String[]
  capacity       Int
  location       String
  description    String?
  date           DateTime

  categoryIdRel EventCategory @relation(fields: [categoryId], references: [id])
  categoryId    String
  
  orgIdRel Organization @relation(fields: [organizationId], references: [id])
  organizationId String

  Application Application[]
  @@map("events")
}

model EventCategory {
  id        String   @id @default(cuid())
  name      String   @unique
  events    Event[]
}

model Organization {
  id String @id @default(cuid())
  organizationName String

  User User[]
  Event Event[]
  Application Application[]

  @@map("organizations")
}

model Application {
  id String @id @default(cuid())
  orgIdRel Organization  @relation(fields: [organizationId], references: [id])
  organizationId String
  userIdRel User @relation(fields: [userId], references: [id])
  userId String
  eventIdRel Event @relation(fields: [eventId], references: [id])
  eventId String

  @@map("applications")
}

model Chat {
  id String @id @default(cuid())

  users User[]

  Message Message[]

  @@map("chats")
}

model Message {
  id String @id @default(cuid())
  senderUserIdRel User @relation(fields: [senderUserId], references: [id])
  senderUserId String
  chatIdRel Chat @relation(fields: [chatId], references: [id])
  chatId String
  message String
  messageTime DateTime
  
  @@map("messages")
}

  model School {
  id        String     @id @default(cuid())
  objectid  Int     @unique
  name      String
  street    String?
  building  String?
  postal    String?
  phone     String?
  email     String?
  www       String?
  type      String? 
  updatedAt DateTime
  addedAt   DateTime
}

model SecureUpload {
  id        String   @id @default(cuid())
  secret    String   @unique
  filename  String
  url       String
}

