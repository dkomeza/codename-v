generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id              String   @id @default(cuid())
  type            Int
  email           String
  password        String

  name            String
  surname         String
  orgIdRel Organization @relation(fields: [organizationId], references: [id])
  organizationId String
  birthDate      DateTime
  chats Chat[]

  Application Application[]
  Message Message[]

  @@map("users")
}

model Event {
  id             String @id @default(cuid())
  topic          String
  startDate      DateTime
  endTime        DateTime
  requirements   String
  orgIdRel Organization @relation(fields: [organizationId], references: [id])
  organizationId String

  Application Application[]
  @@map("events")
}

model Organization {
  id String @id @default(cuid())
  organizationName String

  User User[]
  Event Event[]
  Application Application[]

  @@map("organizations")
}

model Application {
  id String @id @default(cuid())
  orgIdRel Organization  @relation(fields: [organizationId], references: [id])
  organizationId String
  userIdRel User @relation(fields: [userId], references: [id])
  userId String
  eventIdRel Event @relation(fields: [eventId], references: [id])
  eventId String

  @@map("applications")
}

model Chat {
  id String @id @default(cuid())

  users User[]

  Message Message[]

  @@map("chats")
}

model Message {
  id String @id @default(cuid())
  senderUserIdRel User @relation(fields: [senderUserId], references: [id])
  senderUserId String
  chatIdRel Chat @relation(fields: [chatId], references: [id])
  chatId String
  message String
  messageTime DateTime
  
  @@map("messages")
}

  model School {
  id        String     @id @default(cuid())
  objectid  Int     @unique
  name      String
  street    String?
  building  String?
  postal    String?
  phone     String?
  email     String?
  www       String?
  type      String? 
  updatedAt DateTime
  addedAt   DateTime
}

model SecureUpload {
  id        String   @id @default(cuid())
  secret    String   @unique
  filename  String
  url       String
}

